{
  "name": "react-editable-fields",
  "version": "1.0.0",
  "description": "React components for inline-editing of forms",
  "main": "./dist/src/index.js",
  "typings": "./dist/src/index.d.ts",
  "scripts": {
    "build": "npm build-ts",
    "postinstall": "$(npm bin)/typings install",
    "build-ts": "rm -rf dist/* && $(npm bin)/tsc --pretty",
    "build-background-watch": "$(npm bin)/tsc --watch --pretty",
    "test-watch": "npm run build-background-watch & $(npm bin)/mocha --watch --reporter spec --require test/setupBrowser.js dist/**.js",
    "test-spec": "$(npm bin)/mocha dist/**/*.spec.js -R spec --bail",
    "test-raw": "$(npm bin)/mocha --debug --reporter spec --require test/setupBrowser.js --recursive dist/test",
    "test-cov": "$(npm bin)/istanbul cover node_modules/mocha/bin/_mocha -- --debug --reporter spec --require test/setupBrowser.js --recursive dist/test",
    "test": "npm run build-ts && npm run --silent test-cov",
    "devServer": "npm run build-background-watch & $(npm bin)/beefy --live --index ./tools/devServer/public/index.html dist/tools/devServer/main.js:bundle.js",
    "storybook": "$(npm bin)/start-storybook -p 9001 -s ./styles/bootstrap/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobdr/react-editable-fields.git"
  },
  "keywords": [
    "react",
    "form",
    "editable",
    "xeditable"
  ],
  "author": "Jacob Roberts <jacobdr@gmail.com>",
  "license": "SEE LICENSE IN LICESNSE",
  "bugs": {
    "url": "https://github.com/jacobdr/react-editable-fields/issues"
  },
  "homepage": "https://github.com/jacobdr/react-editable-fields#readme",
  "peerDependencies": {
    "react": ">0.14.0",
    "react-dom": ">0.14.0"
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "react-bootstrap": "^0.28.5",
    "source-map-support": "^0.4.0",
    "typescript": "^1.8.9",
    "typings": "^0.7.12",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "@kadira/storybook": "^1.6.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "enzyme": "^2.2.0",
    "istanbul": "^0.4.3",
    "jsdom": "^8.3.0",
    "live-server": "^0.9.2",
    "mocha": "^2.4.5",
    "npm": "^3.8.6",
    "raw-loader": "^0.5.1",
    "react": "^15.0.0",
    "react-addons-test-utils": "^15.0.0",
    "react-dom": "^15.0.0",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.1",
    "ts-node": "^0.7.1",
    "tsify": "^0.14.2"
  }
}
